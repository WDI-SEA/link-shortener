<!-- Generates a series of materialize cards showing the contents of the database
organized by popularity  -->
<div id="index">
<% link.forEach(function(address) { %>
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                   <span class="card-title"><%= address.link %></span>
                    <p>Address - <%= address.link %><br>
                    Shortens to - localhost:3000/<%= address.short %><br>
                    Link used <%= address.count %> times</p>
                </div>
                <div class="card-action">
                    <a href="localhost:3000/<%= address.short %>">Link to shortened address</a>
                </div>
            </div>
        </div>
    </div>
<% }); %>
</div>

