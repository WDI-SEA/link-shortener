<!-- creates a div to diaplay the shortened address link and counter -->
<div id="displayShortAddress" class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Shortened links</span>
                    <p>Address - <%= address %><br>
                    Shortens to - localhost:3000/<%= hashid %><br>
                    Link used <%= count %> times</p>
            </div>
            <div class="card-action">
               	<a href="localhost:3000/<%= hashid %>">Link to shortened address</a>
            </div>
        </div>
    </div>
</div>


